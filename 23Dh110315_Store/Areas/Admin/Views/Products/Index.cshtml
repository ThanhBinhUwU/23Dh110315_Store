@model IEnumerable<_23Dh110315_Store.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success">DANH SÁCH DANH MỤC SẢN PHẨM</h2>


<table class="table bg-info">
    <tr>
        
        <th class="bg-success">
            @*Html.DisplayNameFor(model => model.Category.CategoryName)*@
            TÊN DANH MỤC 
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        
        <td>
            @Html.ActionLink("Cập nhật", "Edit", new { id=item.CategoryID }, new {@class ="btn btn-primary btn-sm"}) 
            @Html.ActionLink("Xóa", "Delete", new { id=item.CategoryID }, new { @class = "btn btn primary btn-sm" })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn primary btn-sm" })

</p>